{
    "name": "ci_for_magento_with_behat",
    "description": "This project include TDD for magento",
    "config": {
        "bin-dir": "bin"
    },
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "magetest/magento-behat-extension": "dev-feature/Behat3",
        "phpspec/phpspec": "dev-master",
        "bossa/phpspec2-expect": "^2.0.0",
        "phpunit/phpunit": "^6.0",
        "behat/mink": "~1.6.0",
        "behat/mink-extension": "~2.0.0",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*",
        "emagister/selenium-server": "2.*",
        "sensiolabs/behat-page-object-extension": "^2.0",
        "facebook/webdriver": "^1.4"
    },
    "autoload": {
        "psr-0": {
            "": [
                "dyh/app",
                "dyh/app/code/local",
                "dyh/app/code/community",
                "dyh/app/code/core",
                "dyh/lib"
            ]
        }
    },
    "minimum-stability": "dev"
}
